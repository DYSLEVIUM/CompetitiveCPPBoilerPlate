{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "D:\\dev\\cpp\\sdk\\mingw64\\bin\\g++.exe",	//path of compiler
			"args": [
				"-g",	//default debug information
				"-Wshadow",	//warning for shadowed variable
				"-Wall",	//warnings in gcc
				"${file}",	//file to compile
				"-o",	//output followed by name of file
				"${fileDirname}\\${fileBasenameNoExtension}.exe",	//exe or out file
				"-O2",	//level 2 optimization
				"-Wno-unused-result"	//don't warn if result of a function is not used
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
